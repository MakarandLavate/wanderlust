<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a catchy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter a title</div>
      </div>
      <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-lable">Upload image</lable>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>


      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-lable">Price</lable>
          <input
            name="listing[price]"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Enter valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
          <lable for="country" class="form-lable">Country</lable>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-lable">Location</lable>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="Delhi,India"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <button class="btn btn-dark btn-add mt-3">Add</button>
    </form>
  </div>
</div>
